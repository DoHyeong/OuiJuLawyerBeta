<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ouijulawyer.project.soma.ouijulawyerbeta">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.Read_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="ouijulawyerbeta.db" />
        <meta-data
            android:name="VERSION"
            android:value="3" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="ouijulawyer.project.soma.ouijulawyerbeta" />

        <activity android:name=".View.SplashActivity"
                  android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".View.LoginActivity"
                  android:theme="@style/Theme.Design.NoActionBar"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.nhn.android.naverlogin.ui.OAuthLoginInAppBrowserActivity"
            android:label="OAuth2.0 In-app" />
        <activity
            android:name=".View.MainActivity"
            android:label="외주변호사-메인화면"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.ContractDetailActivity"
                  android:label="외주변호사-상세보기"
            android:screenOrientation="portrait"
            />
        <activity android:name=".View.MyInfoActivity"
                  android:label="외주변호사-내정보"
            android:screenOrientation="portrait"

            />
        <activity android:name=".View.NewContractActivity"
                  android:label="외주변호사-계약서작성"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>